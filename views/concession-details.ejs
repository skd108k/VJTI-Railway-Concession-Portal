    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link
      rel="stylesheet"
      href="https://unicons.iconscout.com/release/v4.0.0/css/line.css"
    />
    <link rel="stylesheet" href="/stylesheets/styles.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

</head>
<body>
           
  
  <div>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#" disabled>VJTI Railway Concession</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link">Concession Details</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/status">Status</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </div>

      <div class="container" style="display: block">
        <header>Concession Details</header>
  
        <form action="/application/conssesion/<%= student._id %> " method="post">
          <div class="form first">
            <div class="details personal">
  
              <div class="fields">
                <div class="input-field">
                  <label>Address</label>
                  <input type="text" placeholder="Enter your address" name="address" required />
                </div>
  
                <div class="input-field">
                  <label>Railway Line</label>
                  <select required name="railway_line">
                    <option value="">Select</option>
                    <option>Western</option>
                    <option>Central</option>
                    <option>Harbour</option>
                    <option>Trans Harbour</option>
                  </select>
                </div>
  
                <div class="input-field">
                  <label>Starting Station</label>
                  <input type="text" placeholder="Enter Starting Station" required name="starting" />
                </div>

                <div class="input-field">
                    <label>Destination Station</label>
                    <select required name="destination">
                        <option value="">Select</option>
                        <option>Matunga</option>
                        <option>Dadar</option>
                        <option>Matunga Road</option>
                        <option>Vadala</option>
                        <option>King Circle</option>
                      </select>
                  </div>

                  <div class="input-field">
                    <label>Train Class</label>
                    <select required name="class">
                        <option value="">Select</option>
                        <option>Ist Class</option>
                        <option>IIst Class</option>
                      </select>
                  </div>
  
                  <div class="input-field">
                    <label>Period</label>
                    <select required name="duration">
                        <option value="">Select</option>
                        <option>Monthly</option>
                        <option>Quarterly</option>
                      </select>
                  </div>

                  <div class="input-field">
                    <label>Are you applying for Renewal??</label>
                    <select onchange="get(this)" class="check" required>
                        <option value="">Select</option>
                        <option value="yes">Yes</option>
                        <option value="no">No</option>
                      </select>
                  </div>

                  <div class="input-field showAfter">
                    <label>Season Ticket Number</label>
                    <input name="STN" type="number" min="0" placeholder="Season Ticket Number"  />
                  </div>
                  <div class="input-field showAfter">
                    <label>Date from: </label>
                    <input name="dateFromPass" type="date" placeholder="Date from: "  />
                  </div>
                  <div class="input-field showAfter">
                    <label>Date to: </label>
                    <input name="datetoPass" type="date" placeholder="Date to: "  />
                  </div>
                  <div class="input-field showAfter">
                    <label>Previous Ticket Pass </label>
                    <input name="fileSTN" type="file" accept="image/png, image/jpeg, image/jpg"  />
                  </div>
  
              <button type="submit" class="nextBtn">
                <span class="btnText">Submit</span>
                <i class="uil uil-navigator"></i>
              </button>
            </div>
          </div>
        </form>
      </div>
      <script>
        const ele = document.querySelectorAll(".showAfter");
        for(let i = 0; i < ele.length; i++){
            ele[i].style.display = "none";
        }
        function get(select) {
            let value = select.value;
        if(value === "yes"){            
                    for(let i = 0; i < ele.length; i++){
                        ele[i].style.display = "block";
                        ele[i].required = true;
                    }
                } else if(value === "no") {
                    for(let i = 0; i < ele.length; i++){
                        ele[i].style.display = "none";
                        ele[i].required = false;
                    }
                }
            }
      </script>
</body>

</html>